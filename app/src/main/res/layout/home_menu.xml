<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/fab_margin">

    <TextView
        android:id="@+id/helloUserTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Hello, user"
        android:layout_marginBottom="@dimen/marginEditText"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <TextView
        android:id="@+id/functionTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_below="@id/helloUserTextView"
        android:text="Function"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:columnCount="2"
        android:useDefaultMargins="true"
        android:gravity="center"
        android:layout_gravity="center">

        <Button
            android:id="@+id/buttonServices"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@color/colorPrimary"
            android:drawableTop="@drawable/shipping"
            android:padding="@dimen/fab_margin"
            android:text="\nServices"
            android:textColor="#e8e9e9" />

        <Button
            android:id="@+id/buttonRentCar"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:drawableTop="@drawable/white_car"
            android:padding="@dimen/fab_margin"
            android:text="\nRent a car"
            android:textColor="#e8e9e9" />

        <Button
            android:id="@+id/buttonReports"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:drawableTop="@drawable/report"
            android:padding="@dimen/fab_margin"
            android:text="\nReports"
            android:textColor="#e8e9e9" />

        <Button
            android:id="@+id/buttonLogOut"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:drawableTop="@drawable/loggout"
            android:padding="@dimen/fab_margin"
            android:text="\nLog out"
            android:textColor="#e8e9e9" />

    </GridLayout>

</RelativeLayout>